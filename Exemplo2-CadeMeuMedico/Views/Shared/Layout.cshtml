@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>Cadê meu médico? - @ViewBag.Title</title>
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />

    <style>
        body {
            padding-top:60px;
        }
    </style>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#" target="_self">Cadê meu médico?</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @Html.ActionLink("Principal", "Index", "Principal")
                    </li>
                    
                    @if (Exemplo2_CadeMeuMedico.Repositorios.RepositorioUsuarios.VerificaSeOUsuarioEstaLogadoComBaseNoCookie())
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Cadastros <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Médicos", "Index", "Medicos")</li>
                                <li>@Html.ActionLink("Cidades", "Index", "Cidades")</li>
                                <li>@Html.ActionLink("Especialidades", "Index", "Especialidades")</li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li>
                            @Html.ActionLink("Acesso restrito", "Login", "Usuarios")
                        </li>
                    }
                        
                    
                </ul>
                @{
                    if (Exemplo2_CadeMeuMedico.Repositorios.RepositorioUsuarios.VerificaSeOUsuarioEstaLogadoComBaseNoCookie())
                    {
                        <div style="float:right; width:10%; text-align:right;">
                            <ul class="nav navbar-nav">
                                <li>
                                    <a href="/Usuarios/Sair" target="_self" id="ItemMenuSair">Sair</a>
                                </li>
                            </ul>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

    <div class="container">
        @RenderBody()
    </div>
    
    <script src="@Url.Content("~/Scripts/jquery-2.1.4.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/Usuarios.js")"></script>
    @RenderSection("script", required: false)

</body>
</html>
